import("//build/ohos.gni")

ohos_shared_library("ohhidebug") {
  include_dirs = [
    "../../interfaces/native/kits/include",
    "../native/include",
  ]

  sources = [
    "hidebug_backtrace.cpp",
    "hidebug_ndk.cpp",
    "hidebug_perf.cpp",
  ]
  if (!is_asan) {
    defines = [ "HOOK_ENABLE" ]
  }
  deps = [ "../native:hidebug_native" ]

  external_deps = [
    "bounds_checking_function:libsec_shared",
    "faultloggerd:libbacktrace_local",
    "faultloggerd:libdfx_dumpcatcher",
    "hilog:libhilog",
  ]

  innerapi_tags = [ "ndk" ]
  output_extension = "so"
  part_name = "hiprofiler"
  subsystem_name = "developtools"
}
